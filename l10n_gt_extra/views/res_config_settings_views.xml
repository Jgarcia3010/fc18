<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="aspl_security_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_gt_extra</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <!-- Enfoque simple: agregar al final del formulario -->
            <xpath expr="//form" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-12">
                        <div class="o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="fa fa-percent fa-2x"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="iva_retencion_account_id">Cuenta de Retención IVA</label>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="iva_retencion_account_id" />
                                    </div>
                                    <div class="text-muted mt8">
                                        Ingrese el diario de las retenciones de IVA.
                                    </div>
                                </div>
                                
                                <label for="isr_retencion_account_id" class="mt16">Cuenta de Retención ISR</label>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="isr_retencion_account_id" />
                                    </div>
                                    <div class="text-muted mt8">
                                        Ingrese el diario de las retenciones de ISR.
                                    </div>
                                </div>
                                
                                <label for="show_analytic_lines" class="mt16">Mostrar Líneas Analíticas</label>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="show_analytic_lines" />
                                    </div>
                                    <div class="text-muted mt8">
                                        Indique si desea que se muestren las líneas analíticas en el detalle de las facturas.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>