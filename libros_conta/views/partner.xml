<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_fcextras" model="ir.ui.view">
        <field name="name">res.partner.form.fcextras</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
          <xpath expr="//page[@name='sales_purchases']" position="after">
            <page string="FC" name="fc_extras">
              <group name="libros_contables" string="Libros contables">
                <field name="exclude_libros" />
              </group>
            </page>
          </xpath>
        </field>
    </record>
</odoo>
