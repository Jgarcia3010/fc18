<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_tree_grouped_general_fc_extras" model="ir.ui.view">
        <field name="name">account.move.line.tree.grouped.fc_extras</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_general"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="before">
            </xpath>
        </field>
    </record>

    <record id="view_account_move_libros_extensions" model="ir.ui.view">
        <field name="name">account.move.libros_extensions</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="anticipo" invisible="move_type != 'out_invoice'" />
            </xpath>
        </field>
    </record>
</odoo>