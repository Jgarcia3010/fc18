<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="paperformat_libro" model="report.paperformat">
            <field name="name">Carta Horizontal</field>
            <field name="default" eval="False" />
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">15</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">14</field>
            <field name="dpi">120</field>
        </record>

        <record id="action_imprimir_libro_compras" model="ir.actions.report">
            <field name="name">Libro de compras</field>
            <field name="display_name">Libro de compras</field>
            <field name="model">account.invoice.librocompras</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">libros_conta.libro_template_compras</field>
            <field name="report_file">libros_conta.libro_template_compras</field>
            <field name="print_report_name">'Libro de Compras FC</field>
            <field name="paperformat_id" ref="libros_conta.paperformat_libro"/>
            <field name="attachment_use">False</field>
        </record>
        
        <record id="action_imprimir_libro_ventas" model="ir.actions.report">
            <field name="name">Libro de ventas</field>
            <field name="display_name">Libro de ventas</field>
            <field name="model">account.invoice.libroventas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">libros_conta.libro_template_ventas</field>
            <field name="report_file">libros_conta.libro_template_ventas</field>
            <field name="print_report_name">'Libro de Ventas FC</field>
            <field name="paperformat_id" ref="libros_conta.paperformat_libro"/>
            <field name="attachment_use">False</field>
        </record>

        
    </data>
</odoo>
 
