<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <!-- Agregar información al INICIO -->
        <xpath expr="//div[1]" position="before">
            <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 15px;">
                <strong>INFORMACIÓN COSTA RICA - MÓDULO FUNCIONANDO</strong><br/>
                <span t-field="o.partner_id.name"/> - 
                <span t-field="o.partner_id.vat"/>
            </div>
        </xpath>

        <!-- Agregar QR al FINAL -->
        <xpath expr="//div[last()]" position="after">
            <div style="text-align: center; margin-top: 20px;">
                <t t-if="o.display_qr_code">
                    <img t-att-src="o._generate_qr_code(silent_errors=True)" 
                         style="max-width:100px; max-height:100px;"/>
                </t>
                <p style="font-size: 0.8em;">Comprobante Electrónico Costa Rica</p>
            </div>
        </xpath>

    </template>
</odoo>