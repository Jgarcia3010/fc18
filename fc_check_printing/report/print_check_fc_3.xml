                  .ckus_check {
                      position: relative;
                      font-family: Arial, Helvetica, sans-serif;
                      font-size: 18px;
                  }
                  /* ================= FORMATO 1 ================= */
                    .ckus_check.formato-1 .sequence_number {
                        position: absolute;
                        top: 0px;
                        right: 0px;
                    }
                    
                    .ckus_check.formato-1 .ckus_date {
                        top: 1.35in;
                        left: 1.57in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-1 .ckus_payee_name {
                        top: 1.60in;
                        left: 1.38in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-1 .ckus_amount {
                        top: 1.35in;
                        right: 1in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-1 .ckus_amount_in_word {
                        top: 1.98in;
                        left: 1.38in;
                        position: absolute;
                        width: 6.2in;
                    }
                    
                    .ckus_check.formato-1 .cheque_no_negociable {
                        top: 3in;
                        left: 1.38in;
                        position: absolute;
                        font-weight: bold;
                    }
                    
                    /* ================= FORMATO 2 ================= */
                    .ckus_check.formato-2 .sequence_number {
                        position: absolute;
                        top: 0px;
                        right: 0px;
                    }
                    
                    .ckus_check.formato-2 .ckus_date {
                        top: 0.9in;
                        left: 1.2in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-2 .ckus_payee_name {
                        top: 1.3in;
                        left: 1.2in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-2 .ckus_amount {
                        top: 0.9in;
                        right: 0.7in;
                        position: absolute;
                    }
                    
                    .ckus_check.formato-2 .ckus_amount_in_word {
                        top: 1.7in;
                        left: 1.2in;
                        position: absolute;
                        width: 6.2in;
                    }
                    
                    .ckus_check.formato-2 .cheque_no_negociable {
                        top: 2.4in;
                        left: 1.38in;
                        position: absolute;
                        font-weight: bold;
                    }
                    
                  .ckus_concepto {
                      position: absolute;
                      top: 4.2in;
                      left: 0.39in;
                      width: 7in;
                  }
                  .ckus_cuentas {
                      position: absolute;
                      margin-top: 0.5in;
                      top: 5in;
                      left: 0.5in;
                  }
                  .ckus_cuentas table tr td {
                      padding: 0.02in;
                      padding-left: 0.03in;
                  }
                  .ckus_cuentas table tr td.cuenta_code {
                      width: 1.3in;
