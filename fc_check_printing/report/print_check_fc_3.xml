                  }

                  .ckus_cuentas table tr td.cuenta_name {
                      width: 7.75in;
                      padding-right: 1in; 
                  }

                  .ckus_cuentas table tr td.cuenta_debe {
                      width: 2in;
                      padding-right: 0.5in;
                  }

                  .ckus_cuentas table tr td.cuenta_haber {
                      width: 2in;
                      padding-right: 0.5in;
                  }
                  
                  
                  .ckus_bottom  {
                      width: 7.5in;
                      height: 2in;
