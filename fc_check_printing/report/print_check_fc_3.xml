                  }
                  
                  
                  .ckus_bottom .ckus_no{
                      top: 7.29in;
                      left: 6.5in;
                      position: absolute;
                      width: 2in;
                  }
                  
                  .ckus_bottom .cuenta{
                      top: 7.6in;
                      left: 6.5in;
                      position: absolute;
                      width: 2in;
                  }
                  
                  
