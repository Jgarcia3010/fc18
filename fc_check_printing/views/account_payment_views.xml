<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherited_cheque" model="ir.ui.view">
        <field name="name">account.payment.form.inherited</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='amount_div']" position="after">
                <field name="cheque_no_negociable" invisible="payment_method_code != 'check_printing'"/>
                <field name="concepto" invisible="payment_method_code != 'check_printing'"/>
                <field name="cheque_formato" invisible="payment_method_code != 'check_printing'"/>
                <field name="analytic_account" />
            </xpath>
        </field>
    </record>


    <record id="view_account_payment_register_form_inherit_aa" model="ir.ui.view">
        <field name="name">account.payment.register.form.inherit.account</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="analytic_account"/>
            </xpath>
        </field>
    </record>

</odoo>