<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

 <record id="paperformat_check" model="report.paperformat">
    <field name="name">Letter</field>
    <field name="default" eval="False" />
    <field name="format">custom</field>
    <field name="page_height">185</field>
    <field name="page_width">190</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">0</field>
    <field name="margin_bottom">0</field>
    <field name="margin_left">0</field>
    <field name="margin_right">0</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">0</field>
    <field name="dpi">90</field>
</record>

<record id="paperformat_check_3" model="report.paperformat">
    <field name="name">Formato 3</field>
    <field name="default" eval="False" />
    <field name="format">Letter</field>
    <!-- Keep as 0 since using Letter format -->
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">0</field>
    <field name="margin_bottom">0</field>
    <field name="margin_left">0</field>
    <field name="margin_right">0</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">0</field>
    <field name="dpi">90</field>
</record>

        <record id="action_print_check" model="ir.actions.report">
            <field name="name">Imprimir Cheque</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">fc_check_printing.print_check_fc_1</field>
            <field name="report_file">fc_check_printing.print_check_fc_1</field>
            <field name="print_report_name">'Cheque FC - %s' % (object.partner_id.name,)</field>
            <field name="paperformat_id" ref="fc_check_printing.paperformat_check"/>
            <field name="attachment">'cheque_'+(object.partner_id and object.partner_id.name or 'interno')+'_'+(object.name)+'.pdf'</field>
            <field name="attachment_use">True</field>
        </record>

        <record id="action_print_check_3" model="ir.actions.report">
            <field name="name">Imprimir Cheque 3</field>
            <field name="model">account.payment</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">fc_check_printing.print_check_fc_3</field>
            <field name="report_file">fc_check_printing.print_check_fc_3</field>
            <field name="print_report_name">'Cheque FC 3 - %s' % (object.partner_id.name,)</field>
            <field name="paperformat_id" ref="fc_check_printing.paperformat_check_3"/>
            <field name="attachment">'cheque_'+(object.partner_id and object.partner_id.name or 'interno')+'_'+(object.name)+'.pdf'</field>
            <field name="attachment_use">True</field>
        </record>

    </data>
</odoo>
