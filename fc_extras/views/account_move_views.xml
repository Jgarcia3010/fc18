<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_move_form_view_inherit_fc_extras">
        <field name="name">account.move.form.inherit.fc_extras</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            
            <field name="payment_reference" position="replace">
                <field string="Número de la factura" 
                       name="payment_reference" 
                       invisible="move_type not in ('out_invoice', 'out_refund', 'in_refund', 'out_receipt', 'in_receipt')" 
                       readonly="state != 'draft'"/>
            </field>
            
            <xpath expr="//group[@id='header_left_group'][1]/label[1]" position="replace">
                <label for="ref" 
                       string="Número de la factura" 
                       invisible="move_type not in ('in_invoice', 'in_receipt', 'in_refund')"/>
            </xpath>
            
        </field>
    </record>
</odoo>